# Environment configuration
FLASK_APP=run.py
FLASK_ENV=development

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
# PostgreSQL (recommended for production)
DB_USER=postgres
DB_PASSWORD=postgres  # Make sure this matches your PostgreSQL password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fin_arc

# Direct Database URL (uncomment and use this if the above params don't work)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fin_arc

# For SQLite (simple development setup)
# DATABASE_URL=sqlite:///app.db

# CORS Configuration
# Comma-separated list of allowed URLs for production
#FLUTTER_WEB_URLS=https://yourdomain.com,https://app.yourdomain.com

# Debug mode
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=flask_app.log

# API Configuration
# Maximum number of failed login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5
# Lockout period in seconds (15 minutes)
LOGIN_ATTEMPT_TIMEOUT=900